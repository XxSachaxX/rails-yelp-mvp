<h1>About this restaurant:</h1>

<h2><%= @restaurant.name %></h2>
<ul>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.phone_number %></li>
<li><%= @restaurant.category %></li>
</ul>

<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>
      <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>

  <% end %>
</ul>
<p><%= render 'reviews/form', restaurant: @restaurants %></p>
